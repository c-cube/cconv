(jbuild_version 1)

(executable
 ((name run_tests_ppx)
  (libraries (cconv cconv.yojson cconv.bencode
              yojson bencode oUnit))
  (preprocess (pps (ppx_deriving.std ppx_deriving_cconv ppx_driver.runner)))))

(alias
 ((name    runtest)
  (deps    (run_tests_ppx.exe))
  (action  (run ${exe:run_tests_ppx.exe}))))
